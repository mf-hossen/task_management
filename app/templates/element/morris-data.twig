                },
                {
                    label: "Done",
                    value: {{ count.today_done_task }}
                },
                {
                    label: "Pending",
                    value: {{ count.today_pending_task }}
                },
                {
                    label: "Pause",
                    value: {{ count.today_pause_task }}
