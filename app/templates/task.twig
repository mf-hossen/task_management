{% block contant_wrapper %}

        <div class="row">

            <div class="col-md-8 col-md-offset-2">
                <br><br>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create Task</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="/task/insert" method="post" >
                            <fieldset>
                                <div class="form-group">
                                    Title
                                    <input class="form-control" placeholder="Input Title" name="title" type="text" required autofocus>
                                </div>

                                <div class="form-group">
                                    Description
                                    <textarea name="description" class="form-control" id="desc" style="width: 470px; height: 100px;color: #999999"></textarea>
                                </div>

                                <div class="form-group">
                                    Select Status
                                    <select name="status" class="form-control" id="dept" style="color: #999999" required>
                                        <option value="1" selected>Edit</option>
                                        <option value="2">Redesign</option>
                                        <option value="3">New</option>


                                    </select>
                                </div>

                                <div class="form-group">
                                    User ID
                                    <input class="form-control" placeholder="User ID" name="user_id"  type="text" required>
                                </div>


                                <div class="form-group">
                                    Select member
                                    <select name="member_id" class="form-control" id="mem" style="color: #999999" required>
                                        {% for members in mem %}
                                            <option value="{{ members.id}}">{{ members.first_name}}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="form-group">
                                    Client ID
                                    <input class="form-control" placeholder="Input Client ID" name="client_id" type="text" required>
                                </div>

                                <div class="form-group">
                                    Submission Date
                                    <input class="form-control" name="date" type="date" required>
                                </div>
                                <!--
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </fieldset>
                        </form>
                    </div>
                </div>

            </div>
        </div>


{% endblock %}