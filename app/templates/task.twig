    </ul>
    <!-- /.navbar-top-links   -->
    {% if session.user.0.role== 'Admin' %}
        {% include 'side_nav.twig' %}
    {% endif %}
{% endblock %}
{% block contant_wrapper %}

        <div class="row">

            <div class="col-md-8 col-md-offset-2">
                <br><br>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create Task</h3>
                    </div>
                    <div class="panel-body">
                        <form  class="form-horizontal" role="form" action="/task/insert" method="post"  >
                            <fieldset>
                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Title</label>
                                    <div class="col-sm-8">
                                        <input type="text" name="title" class="form-control" id="inputEmail3" placeholder="Input Title" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Select Member</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" name="member_id">
                                            <option value="NULL">Choose member</option>
                                            {% for members in mem %}
                                                <option value="{{ members.id}}">{{ members.first_name}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>

                                <input class="" placeholder="" name="user_id" value="{{ session.user.0.id }}" type="hidden">


                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Status</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" name="status">
                                            <option value="NULL">Choose status</option>
                                            <option value="1" selected>Edit</option>
                                            <option value="2">Redesign</option>
                                            <option value="3">New</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Client ID</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="client_id" class="form-control" id="inputEmail3" placeholder="Input Client ID" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Submission Date</label>
                                    <div class="col-sm-4">
                                        <input type="date" name="date" class="form-control" id="inputEmail3" placeholder="Input Client ID" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="" class="col-sm-3 control-label ">Description</label>
                                    <div class="col-sm-9">
                                        <textarea name="description" class="form-control" id="summernote"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>

            </div>
        </div>


{% endblock %}