{% extends 'layout/common.twig' %}
{% block title %} Create Member{% endblock %}
{% block contant_wrapper %}

    <div class="row">
        <div class="col-md-12">
            <h3 class="pull-left text-uppercase title text-uppercase">Change Member Information</h3>
            <div class="pull-right btn-toolbar">

                <a href="/member/list" class="btn btn-warning btn-group  text-uppercase">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Member List
                </a>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-8">
            <form class="" role="form" action="/member/update" method="post">
                <fieldset>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" value="{{ data.id }}" name="id">

                            <div class="form-group ">
                                <label for="first_name">First Name</label>
                                <input type="text" name="first_name" class="form-control" id="first_name"
                                       placeholder="First Name" required tabindex="1" value="{{ data.first_name }}">
                            </div>

                            <div class="form-group ">
                                <label for="username">User Name</label>
                                <input type="text" name="username" class="form-control" id="username"
                                       placeholder="User Name" required tabindex="3" value="{{ data.username }}">
                            </div>



                                                        <div class="form-group ">
                                                            <label for="salck_username">Slack User Name</label>
                                                            <input type="text" name="salck_username" class="form-control" id="salck_username"
                                                                   placeholder="Slack User Name" tabindex="5" value="{{ data.slack_username }}">
                                                        </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label for="last_name">Last Name</label>
                                <input type="text" name="last_name" class="form-control" id="last_name"
                                       placeholder="First Name" required tabindex="2" value="{{ data.role }}">
                            </div>

                            <div class="form-group">
                                <label for="role">Role</label>
                                <select class="form-control" name="role" id="role" required tabindex="4">
                                    {% if row.role=='Admin' %}
                                        <option value="Admin" selected="selected">Admin</option>
                                        <option value="Member">Member</option>
                                    {% else %}
                                        <option value="Admin">Admin</option>
                                        <option value="Member" selected="selected">Member</option>
                                    {% endif %}
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}