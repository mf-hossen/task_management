{% extends 'layout/common.twig' %}
{% block title %} Member List{% endblock %}

{% block contant_wrapper %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="pull-left text-uppercase title">Create New Member</h3>
            <div class="pull-right btn-toolbar">
                <a href="/member/create" class="btn btn-success btn-group  text-uppercase">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create New
                </a>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Role</th>
                <th>Slack Username</th>
                <th class="text-right">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for row in data %}
                <tr>
                    <td>{{ row.first_name }}</td>
                    <td>{{ row.last_name }}</td>
                    <td>{{ row.username }}</td>
                    <td>{{ row.role }}</td>
                    <td>{{ row.slack_username }}</td>
                    <td class="text-right">
                        <a href="/member/edit/{{ row.id }}">
                            <span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="Edit Member"
                                  style="color: grey"></span>
                        </a>

                        <a href="/member/delete/{{ row.id }}"
                           onclick="return confirm('Are you sure you want to delete?')">
                            <span class="glyphicon glyphicon-remove" data-toggle="tooltip" title="Remove Member"
                              style="color: red">
                            </span>
                        </a>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- /.table-responsive -->
    </div>

{% endblock %}