{% extends 'layout.twig' %}
{% block title %} Task{% endblock %}



{% block contant_wrapper %}
    <div class="row">
        <div class="col-lg-12" style="margin: 20px">

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">
        Task List
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>Title</th>
            <th>Assign From</th>
            <!--<th>Assign To</th>-->
            <th>Task Type</th>
            <th style="text-align: right">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for tasks in task %}
            <tr class="odd gradeX">
                <td>{{ tasks.title }}</td>
                <td>{{ tasks.username }}</td>
               <!--<td>{{ tasks.membername }}</td>-->

                <td>
                    {% if  tasks.task_type==1 %}
                        Edit
                    {% elseif tasks.task_type==2 %}
                        Redesign
                    {% elseif tasks.task_type==3 %}
                        New
                    {% endif %}

                </td>

                <td style="text-align: right">
                    <a href="/task/task_details/{{ tasks.task_id }}"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title="Details"></span></a>
                    <a href="/task/task_update/{{ tasks.task_id }}"><span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="Edit" style="color: grey"></span></a>
                    <a href="/delete/{{ tasks.task_id }}"><span class="glyphicon glyphicon-remove" data-toggle="tooltip" title="Remove" style="color: red"></span></a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}