{% extends 'layout/common.twig' %}
{% block title %} User Settings {% endblock %}
{% block contant_wrapper %}
    <div class="row">
        <div class="col-md-12">
            <h4 class="pull-left text-uppercase title">User Settings</h4>
            <div class="pull-right btn-toolbar">
                <a href="/" class="btn btn-primary btn-group text-uppercase">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Go to dashboard
                </a>
            </div>

        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-4">
            <form role="form" method="post" action="/update-settings"  onsubmit="return confirm('Do you really want to change infomation?');">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" value=" {{ session.user.0.id }}" name="user_id" type="hidden">
                        <b>Username</b>
                        <input class="form-control" value="{{ session.user.0.username }}" name="username" type="text" autofocus  style="margin-top: 10px" required>
                    </div>
                    <div class="form-group">
                        <b>Password</b>
                        <input class="form-control"   name="password" type="password" placeholder="Input New Password" required style="margin-top: 10px" required>
                    </div>

                    <div class="form-group">
                        <b>Confirm Password</b>
                        <input class="form-control"   name="confirm_password" type="password" placeholder="Confirm Password" required style="margin-top: 10px" required>
                    </div>

                    <!-- Change this to a button or input when using this as a form -->
                    <button type="submit" class="btn btn-success" >Change</button>
                </fieldset>
            </form>
        </div>
        <div class="col-md-6"></div>
    </div>

{% endblock %}